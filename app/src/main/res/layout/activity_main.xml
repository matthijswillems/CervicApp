    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/settings_button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calibrate_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/calibrate_button" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview_button"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/overview_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not connected to CervicGear \nPlease turn it on"
        android:id="@+id/connectedTextView"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plant_complete1"
        android:background="@drawable/plant_complete"
        android:layout_above="@+id/settings_button"
        android:layout_alignEnd="@+id/messages"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"/>
    <ImageView
        android:layout_width="wrap_content"
