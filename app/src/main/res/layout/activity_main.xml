<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.matthijswillems.cervicapp.MainActivity"
    android:background="@color/BlueCervicApp"
    android:id="@+id/mainActivityView">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:weightSum="3"
    android:layout_gravity="bottom"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:background="#ff4b64ff"
        android:textColor="#faffffff"
        android:gravity="center"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView2"
        android:layout_toEndOf="@+id/textView"
        android:layout_weight="1"
        android:background="#ff4b64ff"
        android:textColor="#faffffff"
        android:gravity="center"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView3"
        android:layout_toEndOf="@+id/textView2"
        android:layout_weight="1"
        android:background="#ff4b64ff"
        android:textColor="#faffffff"
        android:gravity="center"
        android:layout_margin="2dp"/>
</LinearLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:visibility="gone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/messages"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plant_bak"
                android:background="@drawable/plant_bak"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plant_stam"
                android:background="@drawable/plant_stam"


                android:layout_alignBottom="@id/plant_bak"
                android:layout_alignLeft="@id/plant_bak"
                android:layout_alignRight="@id/plant_bak"
                />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plant_mask"
